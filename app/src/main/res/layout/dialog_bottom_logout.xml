<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bg_white_top_round_20"
    android:paddingBottom="@dimen/_16sdp">

    <View
        android:id="@+id/viewLine"
        android:layout_width="36dp"
        android:layout_height="4dp"
        android:layout_marginVertical="@dimen/_16sdp"
        android:layout_gravity="center"
        android:background="@drawable/bg_solid_btn_grey_round_8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/ll_choice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/_12sdp"
        android:visibility="visible"
        android:weightSum="2"
        android:layout_marginBottom="@dimen/_8sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvDelete">

        <Button
            android:id="@+id/btnCancel"
            style="@style/cancel_button"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_38sdp"
            android:layout_marginEnd="@dimen/_12sdp"
            android:layout_weight="1"
            android:fontFamily="@font/poppins_regular"
            android:text="Cancel"
            android:layout_marginVertical="@dimen/_8sdp"
            android:textSize="@dimen/_15ssp"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/btnLogout"
            style="@style/BtnLogout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_38sdp"
            android:layout_marginStart="@dimen/_12sdp"
            android:layout_weight="1"
            android:layout_marginVertical="@dimen/_8sdp"
            android:fontFamily="@font/poppins_regular"
            android:text="Yes, Logout"
            android:textSize="@dimen/_15ssp"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
    </LinearLayout>




</LinearLayout>