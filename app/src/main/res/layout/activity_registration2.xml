<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="748dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/registrationtopellipse"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


                <TextView
                    android:id="@+id/tv_text"
                    style="@style/Heading1_bold"
                    android:layout_marginTop="68dp"
                    android:text="@string/registration_tag"
                    android:textSize="24sp"
                    android:fontFamily="@font/poppins_bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/ivProfilePic"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginTop="120dp"
                    android:src="@drawable/profile"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/btUploadImage"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginStart="70dp"
                    android:layout_marginTop="60dp"
                    android:src="@drawable/ic_plus"
                    app:layout_constraintBottom_toBottomOf="@+id/ivProfilePic"
                    app:layout_constraintEnd_toEndOf="@+id/ivProfilePic"
                    app:layout_constraintStart_toStartOf="@+id/ivProfilePic"
                    app:layout_constraintTop_toTopOf="@+id/ivProfilePic"
                    app:strokeColor="@android:color/white" />

                <LinearLayout
                    android:id="@+id/linear_fstname"
                    android:layout_width="wrap_content"
                    android:layout_height="42dp"
                    android:layout_marginTop="59dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/ivProfilePic">

                    <ImageView
                        android:layout_width="45dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/colored_back"
                        android:gravity="center"
                        android:padding="8dp"
                        android:src="@drawable/namee" />

                    <EditText
                        android:id="@+id/et_first_name"
                        android:layout_width="270dp"
                        android:layout_height="match_parent"
                        android:layout_marginStart="-8dp"
                        android:background="@drawable/curved_border"
                        android:hint="@string/first_name"
                        android:fontFamily="@font/poppins_regular"
                        android:textSize="14sp"
                        android:textColor="@color/black"
                        android:inputType="text"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linear_lstname"
                    android:layout_width="wrap_content"
                    android:layout_height="42dp"
                    android:layout_marginTop="13dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/linear_fstname">

                    <ImageView
                        android:layout_width="45dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/colored_back"
                        android:gravity="center"
                        android:padding="8dp"
                        android:src="@drawable/namee" />

                    <EditText
                        android:id="@+id/et_last_name"
                        android:layout_width="270dp"
                        android:layout_height="match_parent"
                        android:layout_marginStart="-8dp"
                        android:background="@drawable/curved_border"
                        android:hint="@string/last_name"
                        android:fontFamily="@font/poppins_regular"
                        android:textSize="14sp"
                        android:textColor="@color/black"
                        android:inputType="text"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linear_occupation"
                    android:layout_width="wrap_content"
                    android:layout_height="42dp"
                    android:layout_marginTop="13dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/linear_lstname">

                    <ImageView
                        android:layout_width="45dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/colored_back"
                        android:gravity="center"
                        android:padding="8dp"
                        android:src="@drawable/occupation" />

                    <TextView
                        android:id="@+id/et_occupation"
                        android:layout_width="270dp"
                        android:layout_height="match_parent"
                        android:layout_marginStart="-8dp"
                        android:background="@drawable/curved_border"
                        android:hint="@string/occupation"
                        android:gravity="center_vertical"
                        android:drawableRight="@drawable/ic_baseline_arrow_drop_down_24"
                        android:fontFamily="@font/poppins_regular"
                        android:textSize="14sp"
                        android:textColor="@color/black"
                        android:inputType="text"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linear_neighbour_name"
                    android:layout_width="wrap_content"
                    android:layout_height="42dp"
                    android:layout_marginTop="13dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/linear_occupation">

                    <ImageView
                        android:layout_width="45dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/colored_back"
                        android:gravity="center"
                        android:padding="8dp"
                        android:src="@drawable/location" />

                    <TextView
                        android:id="@+id/et_neighbour_name"
                        android:layout_width="270dp"
                        android:layout_height="match_parent"
                        android:layout_marginStart="-8dp"
                        android:gravity="center_vertical"
                        android:textSize="14sp"
                        android:fontFamily="@font/poppins_regular"
                        android:textColor="@color/black"
                        android:background="@drawable/curved_border"
                        android:hint="@string/neighbourhood_name"
                        android:inputType="text"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp" />
                </LinearLayout>

                <androidx.cardview.widget.CardView
                    android:id="@+id/btn_submit"
                    android:layout_width="183dp"
                    android:layout_height="34dp"
                    android:layout_marginTop="35dp"
                    android:layout_marginBottom="160dp"
                    android:elevation="20dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="10dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/linear_neighbour_name">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="2dp"
                        android:background="@drawable/button_shape"
                        android:gravity="center"
                        android:text="@string/submit"
                        android:fontFamily="@font/poppins_bold"
                        android:textColor="@color/white"
                        android:textSize="19sp" />
                </androidx.cardview.widget.CardView>


            </androidx.constraintlayout.widget.ConstraintLayout>



        </ScrollView>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/registrationellipsbottom"
            android:scaleType="fitXY"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>


</layout>